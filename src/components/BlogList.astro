---
import { getCollection } from 'astro:content';

const posts = await getCollection('docs', ({ id, data }) => {
  return id.startsWith('blog/') && !id.endsWith('index') && data.draft !== true;
});

const sortedPosts = posts.sort((a, b) => {
  const dateA = a.data.date ? new Date(a.data.date).valueOf() : 0;
  const dateB = b.data.date ? new Date(b.data.date).valueOf() : 0;
  return dateB - dateA;
});
---

<div class="blog-list">
  {sortedPosts.map(post => (
    <article class="blog-card">
      <a href={`/${post.id}/`} class="card-link" aria-label={`Read ${post.data.title}`}>
        <div class="card-content">
          <header>
            <div class="metadata">
              {post.data.date && (
                <time datetime={new Date(post.data.date).toISOString()}>
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                  })}
                </time>
              )}
            </div>
            <h2 class="post-title">{post.data.title}</h2>
          </header>
          <p class="description">{post.data.description}</p>
          <div class="tags">
            {post.data.tags?.map(tag => <span class="tag">#{tag}</span>)}
          </div>
        </div>
        {post.data.heroImage && (
          <div class="card-image">
            <img src={post.data.heroImage} alt="" loading="lazy" />
          </div>
        )}
      </a>
    </article>
  ))}
</div>

<style>
  .blog-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .blog-card {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    background-color: var(--sl-color-bg-nav);
    transition: all 0.2s ease;
  }

  .blog-card:hover {
    transform: translateY(-2px);
    border-color: var(--sl-color-accent);
    box-shadow: 0 4px 12px -2px rgba(0, 0, 0, 0.1);
  }

  .card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    justify-content: space-between;
    padding: 1.5rem;
    gap: 1.5rem;
  }

  .card-link:hover {
    text-decoration: none;
  }

  .card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-image {
    display: none; /* Hidden on mobile by default */
    flex: 0 0 120px;
    height: 120px;
    border-radius: 0.5rem;
    overflow: hidden;
    background-color: var(--sl-color-gray-6);
  }

  @media (min-width: 640px) {
    .card-image {
      display: block;
    }
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .blog-card:hover .card-image img {
    transform: scale(1.05);
  }

  header {
    margin-bottom: 0.75rem;
  }

  .metadata {
    font-size: 0.8rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 0.25rem;
    font-family: var(--sl-font-mono);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 700;
    line-height: 1.3;
    color: var(--sl-color-white);
    margin: 0;
  }

  .blog-card:hover .post-title {
    color: var(--sl-color-accent);
  }

  .description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--sl-color-gray-2);
    margin-bottom: 1rem;
    flex-grow: 1;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--sl-color-gray-3);
    background-color: var(--sl-color-gray-6);
    padding: 0.15rem 0.6rem;
    border-radius: 9999px;
    font-weight: 500;
  }

  .blog-card:hover .tag {
    color: var(--sl-color-accent-high);
    background-color: var(--sl-color-accent-low);
  }
</style>
